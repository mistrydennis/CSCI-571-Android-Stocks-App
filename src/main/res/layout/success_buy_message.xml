<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:background="@color/green">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/congrats"
            android:layout_marginLeft="100dp"
            android:paddingTop="20dp"
            android:text="Congratulations!"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/success_share_text"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_below="@id/congrats"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"


            android:text="You have successfully bought 1 shares of MSFT"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/done"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@+id/success_share_text"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="43dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_corners_without_border"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:text="DONE"
            android:textColor="@color/green"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"

            ></Button>

    </RelativeLayout>

</RelativeLayout>